<%= form_for :user, :url => {:action => "new_user_reg"} do |user| %>
      <%if @user.errors.any?%>
              <%@user.errors.full_messages.each do |msg|%>
                      <div><font color="red" class = "error"><%= msg %></font><br />
              <%end%>
      <%end%>
                        <% unless params[:commit].nil? %> <h4 align="center"> <div class ="estim"><%= flash[:notice] %></div></h4><% end %>
    <div class ="proj_background">      
      <p><center><h2><u>New User Details</u></h2></center>
      
      <label>Your Name:</label> <%= user.text_field :name, :class =>"text" %></p><br><br>

        <p><%= label_tag 'Email:' %>
        <%= user.text_field :email, :class =>"text"  %></p><br>

        <p><%= label_tag 'Phone:' %>
          <%= user.text_field :phone, :class =>"text"  %></p><br><br>

          <p><label class="textsa">Location</label>
        <%= user.select("location", options_for_select(@location), :class=>'textsa' )%></p><br><br>

        <p><%= label_tag 'Select a Username:' %>
        <%= user.text_field :username, :class =>"text"  %></p><br>

        <p><%= label_tag 'Select a Password:' %>
        <%= user.password_field :password, :class =>"text"  %></p><br>

        <p><%= label_tag 'Confirm Password:' %>
        <%= user.password_field :password_confirmation, :class =>"text"  %></p><br>

        <div align="right">
        <p><%= submit_tag '  Save  ' %> &nbsp &nbsp <input type = "reset" value = "Reset"</p></div>
     
    </div>

<% end %>
